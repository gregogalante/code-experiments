source 'https://rubygems.org'

git_source(:github) do |repo_name|
  repo_name = "#{repo_name}/#{repo_name}" unless repo_name.include?("/")
  "https://github.com/#{repo_name}.git"
end


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 5.1.0'
gem 'puma', '~> 3.7'

# Styles gems
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.2'
gem 'jbuilder', '~> 2.5'
gem 'jquery-rails'
gem 'turbolinks', '~> 5'

# Database.
# doc: https://rubygems.org/gems/sqlite3/versions/1.3.11
gem 'sqlite3'


# Test gems
group :test do
  # testing
  gem 'rspec'
end

# Development gems
group :development do
  # develop
  gem 'listen', '~> 3.1.5'
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
  # testing
  gem 'better_errors'
  gem 'faker'
  # console
  gem 'colorize'
  gem 'table_print'
  # generate er doc
  gem 'rails-erd'
  # code quality
  gem 'rubocop'
  gem 'rubycritic'
end

# Production gems
group :production do

end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
